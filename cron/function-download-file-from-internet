def is_tor_exit_node(input):
    import urllib
    import urllib.request
    import numpy as np
    import pandas as pd
    urllib.request.urlretrieve("https://check.torproject.org/torbulkexitlist", "tor_exit_nodes.txt")
    checklist = pd.read_csv("tor_exit_nodes.txt", header = None)
    df = pd.DataFrame(checklist)
    N= len(df)
    for i in range(N):
        if df.values[i] == input:
            output = 1
            break
        else:
            output = 0
    return output
